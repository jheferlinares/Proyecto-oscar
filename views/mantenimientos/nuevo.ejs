<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EANSA - Nuevo Mantenimiento</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/mantenimientos">
                <i class="fas fa-tools me-2"></i>EANSA
            </a>
            
            <% if (user) { %>
                <div class="navbar-nav ms-auto">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i><%= user.nombre %> 
                            <span class="badge bg-<%= user.rol === 'administrador' ? 'danger' : 'warning' %>"><%= user.rol %></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/auth/logout"><i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión</a></li>
                        </ul>
                    </div>
                </div>
            <% } %>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4><i class="fas fa-plus me-2"></i>Nuevo Mantenimiento</h4>
            </div>
            <div class="card-body">
                <% if (typeof error !== 'undefined') { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                <% } %>

                <form action="/mantenimientos" method="POST">
                    <input type="hidden" id="codigo" name="codigo" value="<%= query && query.codigo ? query.codigo : '' %>">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="tipo" class="form-label">Tipo de Equipo</label>
                                <select class="form-select" id="tipo" name="tipo" required>
                                    <option value="">Seleccionar...</option>
                                    <option value="Desktop" <%= query && query.tipo === 'Desktop' ? 'selected' : '' %>>Desktop</option>
                                    <option value="Laptop" <%= query && query.tipo === 'Laptop' ? 'selected' : '' %>>Laptop</option>
                                    <option value="Servidor" <%= query && query.tipo === 'Servidor' ? 'selected' : '' %>>Servidor</option>
                                    <option value="All-in-One" <%= query && query.tipo === 'All-in-One' ? 'selected' : '' %>>All-in-One</option>
                                </select>
                            </div>
                        </div>
                                                <div class="col-md-6">
                                                        <div class="mb-3">
                                                                <label for="modelo" class="form-label">Modelo</label>
                                                                <% if (typeof modelos !== 'undefined' && modelos.length > 0) { %>
                                                                    <select id="modeloSelect" class="form-select mb-2">
                                                                        <option value="">-- Elegir modelo existente (opcional) --</option>
                                                                        <% modelos.forEach(m => { %>
                                                                            <option value="<%= m.codigo %>|<%= m.nombre %>|<%= m.tipo %>"><%= m.nombre %> (<%= m.codigo %>)</option>
                                                                        <% }) %>
                                                                    </select>
                                                                <% } %>
                                                                <input type="text" class="form-control" id="modelo" name="modelo" placeholder="Nombre o código del modelo" required value="<%= query && query.modelo ? query.modelo : '' %>">
                                                        </div>
                                                </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="card my-3">
                                <div class="card-body text-center">
                                    <h5 class="card-title mb-2">Agenda de mantenimientos</h5>
                                    <p class="mb-0 small">
                                        <strong>Preventivo:</strong> Próximo en 3 meses &nbsp;|&nbsp;
                                        <strong>Correctivo:</strong> Revisión en 1 mes &nbsp;|&nbsp;
                                        <strong>Predictivo:</strong> Próximo en 6 meses
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="tipoMantenimiento" class="form-label">Tipo de Mantenimiento</label>
                                <select class="form-select" id="tipoMantenimiento" name="tipoMantenimiento" required>
                                    <option value="">Seleccionar...</option>
                                    <option value="Preventivo">Preventivo</option>
                                    <option value="Correctivo">Correctivo</option>
                                    <option value="Predictivo">Predictivo</option>
                                </select>
                                
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="fechaInicio" class="form-label">Fecha y Hora de Inicio</label>
                                <input type="datetime-local" class="form-control" id="fechaInicio" name="fechaInicio" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="fechaTermino" class="form-label">Fecha y Hora de Término</label>
                                <input type="datetime-local" class="form-control" id="fechaTermino" name="fechaTermino" required>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="tecnico" class="form-label">Técnico Responsable</label>
                        <input type="text" class="form-control" id="tecnico" name="tecnico" required>
                    </div>

                    <div class="mb-3">
                        <label for="razon" class="form-label">Razón del Mantenimiento</label>
                        <textarea class="form-control" id="razon" name="razon" rows="3" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="observaciones" class="form-label">Observaciones (Opcional)</label>
                        <textarea class="form-control" id="observaciones" name="observaciones" rows="2"></textarea>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/mantenimientos" class="btn btn-secondary me-md-2">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-2"></i>Guardar Mantenimiento
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
    <script>
    const modeloSelect = document.getElementById('modeloSelect');
    if (modeloSelect) {
        modeloSelect.addEventListener('change', function() {
            const val = this.value;
            if (!val) return;
            const parts = val.split('|');
            const codigo = parts[0];
            const nombre = parts[1] || parts[0];
            const tipo = parts[2] || '';
            document.getElementById('modelo').value = nombre + ' (' + codigo + ')';
            if (tipo) {
                const tipoSelect = document.getElementById('tipo');
                if (tipoSelect) tipoSelect.value = tipo;
            }
            const codigoInput = document.getElementById('codigo');
            if (codigoInput) codigoInput.value = codigo;
        });
    }

    (function prefillFromQuery(){
        try {
            const query = <%- JSON.stringify(query || {}) %>;
            if (query.modelo) document.getElementById('modelo').value = query.modelo;
            if (query.tipo) {
                const tipoSelect = document.getElementById('tipo');
                if (tipoSelect) tipoSelect.value = query.tipo;
            }
            if (query.codigo) {
                const codigoInput = document.getElementById('codigo');
                if (codigoInput) codigoInput.value = query.codigo;
            }
        } catch(e){ /* no bloquear */ }
    })();
    </script>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>