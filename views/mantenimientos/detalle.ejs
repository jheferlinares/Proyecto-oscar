<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Mantenimiento PC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/mantenimientos">
                <i class="fas fa-tools me-2"></i>Sistema Mantenimiento PC
            </a>
            
            <% if (user) { %>
                <div class="navbar-nav ms-auto">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i><%= user.nombre %> 
                            <span class="badge bg-<%= user.rol === 'administrador' ? 'danger' : 'warning' %>"><%= user.rol %></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/auth/logout"><i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión</a></li>
                        </ul>
                    </div>
                </div>
            <% } %>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h4><i class="fas fa-info-circle me-2"></i>Detalle del Mantenimiento</h4>
                <% if (user.rol === 'administrador') { %>
                    <a href="/mantenimientos/<%= mantenimiento._id %>/editar" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit me-2"></i>Editar
                    </a>
                <% } %>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5><i class="fas fa-computer me-2"></i>Información del Equipo</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Tipo:</strong></td>
                                <td>
                                    <i class="fas fa-<%= mantenimiento.tipo === 'Desktop' ? 'desktop' : 
                                                        mantenimiento.tipo === 'Laptop' ? 'laptop' : 
                                                        mantenimiento.tipo === 'Servidor' ? 'server' : 'computer' %> me-2"></i>
                                    <%= mantenimiento.tipo %>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Modelo:</strong></td>
                                <td><%= mantenimiento.modelo %></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-tools me-2"></i>Información del Mantenimiento</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Tipo:</strong></td>
                                <td>
                                    <span class="badge bg-<%= mantenimiento.tipoMantenimiento === 'Preventivo' ? 'success' : 
                                                              mantenimiento.tipoMantenimiento === 'Correctivo' ? 'danger' : 'info' %>">
                                        <%= mantenimiento.tipoMantenimiento %>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Duración:</strong></td>
                                <td><%= mantenimiento.tiempoMantenimiento %> minutos</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5><i class="fas fa-calendar me-2"></i>Fechas</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Fecha realizado:</strong></td>
                                <td><%= new Date(mantenimiento.fecha).toLocaleDateString('es-ES') %></td>
                            </tr>
                            <tr>
                                <td><strong>Hora:</strong></td>
                                <td><%= mantenimiento.hora %></td>
                            </tr>
                            <tr>
                                <td><strong>Próximo mantenimiento:</strong></td>
                                <td>
                                    <%= new Date(mantenimiento.proximoMantenimiento).toLocaleDateString('es-ES') %>
                                    <% 
                                    const hoy = new Date();
                                    const proximo = new Date(mantenimiento.proximoMantenimiento);
                                    const diasRestantes = Math.ceil((proximo - hoy) / (1000 * 60 * 60 * 24));
                                    %>
                                    <% if (diasRestantes < 0) { %>
                                        <span class="badge bg-danger ms-2">Vencido (<%= Math.abs(diasRestantes) %> días)</span>
                                    <% } else if (diasRestantes <= 7) { %>
                                        <span class="badge bg-warning ms-2">Próximo (<%= diasRestantes %> días)</span>
                                    <% } else { %>
                                        <span class="badge bg-success ms-2">Al día (<%= diasRestantes %> días)</span>
                                    <% } %>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-user me-2"></i>Personal</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Técnico:</strong></td>
                                <td><%= mantenimiento.tecnico %></td>
                            </tr>
                            <tr>
                                <td><strong>Registrado por:</strong></td>
                                <td><%= mantenimiento.creadoPor.nombre %></td>
                            </tr>
                            <tr>
                                <td><strong>Fecha registro:</strong></td>
                                <td><%= new Date(mantenimiento.fechaCreacion).toLocaleDateString('es-ES') %></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="mb-4">
                    <h5><i class="fas fa-clipboard-list me-2"></i>Detalles</h5>
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6>Razón del mantenimiento:</h6>
                            <p><%= mantenimiento.razon %></p>
                            
                            <% if (mantenimiento.observaciones) { %>
                                <h6>Observaciones:</h6>
                                <p><%= mantenimiento.observaciones %></p>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="/mantenimientos" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>