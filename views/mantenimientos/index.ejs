<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EANSA - Mantenimientos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/mantenimientos">
                <img src="/images/logo.png" alt="Logo" class="company-logo">
                <i class="fas fa-tools me-2"></i>EANSA
            </a>
            
            <% if (user) { %>
                <div class="navbar-nav ms-auto">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i><%= user.nombre %> 
                            <span class="badge bg-<%= user.rol === 'administrador' ? 'danger' : 'warning' %>"><%= user.rol %></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/auth/logout"><i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión</a></li>
                        </ul>
                    </div>
                </div>
            <% } %>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <h2><i class="fas fa-list me-2"></i>Mantenimientos Registrados</h2>
        <% if (user && (user.rol === 'administrador' || user.rol === 'moderador')) { %>
            <div class="d-flex flex-wrap gap-2">
                <a href="/mantenimientos/nuevo" class="btn btn-success btn-sm">
                    <i class="fas fa-plus me-1 d-md-inline d-none"></i><i class="fas fa-plus d-md-none"></i><span class="d-none d-md-inline">Nuevo</span>
                </a>
                <% if (user.rol === 'administrador') { %>
                  <a href="/mantenimientos/estadisticas/mensuales" class="btn btn-info btn-sm">
                      <i class="fas fa-chart-bar me-1 d-md-inline d-none"></i><i class="fas fa-chart-bar d-md-none"></i><span class="d-none d-md-inline">Estadísticas</span>
                  </a>
                <% } %>
                <% if (user.rol === 'administrador') { %>
                  <a href="/modelos/nuevo" class="btn btn-primary btn-sm">
                      <i class="fas fa-desktop me-1 d-md-inline d-none"></i><i class="fas fa-desktop d-md-none"></i><span class="d-none d-md-inline">Modelo</span>
                  </a>
                <% } %>
                <a href="/modelos" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-th-list me-1 d-md-inline d-none"></i><i class="fas fa-th-list d-md-none"></i><span class="d-none d-md-inline">Modelos</span>
                </a>
            </div>
        <% } %>
    </div>

    <form id="filtersForm" class="row mb-3" method="GET" action="/mantenimientos">
        <div class="col-md-3 mb-2">
            <input type="text" id="searchInput" name="search" class="form-control" placeholder="Buscar por modelo, técnico..." value="<%= typeof query !== 'undefined' && query.search ? query.search : '' %>">
        </div>
    <div class="col-md-3">
        <select id="filterTipo" name="tipo" class="form-select">
            <option value="">Todos los tipos</option>
            <option value="Desktop" <%= typeof query !== 'undefined' && query.tipo === 'Desktop' ? 'selected' : '' %>>Desktop</option>
            <option value="Laptop" <%= typeof query !== 'undefined' && query.tipo === 'Laptop' ? 'selected' : '' %>>Laptop</option>
            <option value="Servidor" <%= typeof query !== 'undefined' && query.tipo === 'Servidor' ? 'selected' : '' %>>Servidor</option>
            <option value="All-in-One" <%= typeof query !== 'undefined' && query.tipo === 'All-in-One' ? 'selected' : '' %>>All-in-One</option>
        </select>
    </div>
    <div class="col-md-3">
        <select id="filterMantenimiento" name="tipoMantenimiento" class="form-select">
            <option value="">Todos los mantenimientos</option>
            <option value="Preventivo" <%= typeof query !== 'undefined' && query.tipoMantenimiento === 'Preventivo' ? 'selected' : '' %>>Preventivo</option>
            <option value="Correctivo" <%= typeof query !== 'undefined' && query.tipoMantenimiento === 'Correctivo' ? 'selected' : '' %>>Correctivo</option>
            <option value="Predictivo" <%= typeof query !== 'undefined' && query.tipoMantenimiento === 'Predictivo' ? 'selected' : '' %>>Predictivo</option>
        </select>
    </div>
    <div class="col-md-2">
        <input id="startDate" type="date" name="startDate" class="form-control" placeholder="Desde" value="<%= typeof query !== 'undefined' && query.startDate ? query.startDate : '' %>">
    </div>
    <div class="col-md-2">
        <input id="endDate" type="date" name="endDate" class="form-control" placeholder="Hasta" value="<%= typeof query !== 'undefined' && query.endDate ? query.endDate : '' %>">
    </div>
</form>
</div>

<script>
    (function(){
        const form = document.getElementById('filtersForm');
        if (!form) return;

        const submit = () => form.submit();

        let timer = null;
        const debounceSubmit = (delay = 350) => {
            if (timer) clearTimeout(timer);
            timer = setTimeout(() => submit(), delay);
        };

        const searchInput = document.getElementById('searchInput');
        if (searchInput) searchInput.addEventListener('input', () => debounceSubmit(400));

        const tipoSelect = document.getElementById('filterTipo');
        if (tipoSelect) tipoSelect.addEventListener('change', submit);

        const tipoMantenimiento = document.getElementById('filterMantenimiento');
        if (tipoMantenimiento) tipoMantenimiento.addEventListener('change', submit);

        const startDate = document.getElementById('startDate');
        if (startDate) startDate.addEventListener('change', submit);

        const endDate = document.getElementById('endDate');
        if (endDate) endDate.addEventListener('change', submit);
    })();
</script>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="mantenimientosTable">
                <thead class="table-dark">
                    <tr>
                        <th class="d-none d-md-table-cell">Tipo</th>
                        <th>Modelo</th>
                        <th class="d-none d-lg-table-cell">Mantenimiento</th>
                        <th class="d-none d-sm-table-cell">Inicio</th>
                        <th class="d-none d-lg-table-cell">Término</th>
                        <th class="d-none d-md-table-cell">Técnico</th>
                        <th class="d-none d-lg-table-cell">Próximo</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% mantenimientos.forEach(mantenimiento => { %>
                        <tr>
                            <td class="d-none d-md-table-cell">
                                <i class="fas fa-<%= mantenimiento.tipo === 'Desktop' ? 'desktop' : 
                                                    mantenimiento.tipo === 'Laptop' ? 'laptop' : 
                                                    mantenimiento.tipo === 'Servidor' ? 'server' : 'computer' %> me-2"></i>
                                <%= mantenimiento.tipo %>
                            </td>
                            <td>
                                <strong><%= mantenimiento.modelo %></strong>
                                <div class="d-md-none">
                                    <small class="text-muted d-block">
                                        <i class="fas fa-<%= mantenimiento.tipo === 'Desktop' ? 'desktop' : 
                                                            mantenimiento.tipo === 'Laptop' ? 'laptop' : 
                                                            mantenimiento.tipo === 'Servidor' ? 'server' : 'computer' %> me-1"></i>
                                        <%= mantenimiento.tipo %>
                                    </small>
                                    <small class="text-muted d-block d-sm-none">
                                        <i class="fas fa-calendar me-1"></i>
                                        <%= new Date(mantenimiento.fechaInicio).toLocaleDateString('es-ES') %>
                                    </small>
                                </div>
                            </td>
                            <td class="d-none d-lg-table-cell">
                                <span class="badge bg-<%= mantenimiento.tipoMantenimiento === 'Preventivo' ? 'success' : 
                                                          mantenimiento.tipoMantenimiento === 'Correctivo' ? 'danger' : 'info' %>">
                                    <%= mantenimiento.tipoMantenimiento %>
                                </span>
                            </td>
                            <td class="d-none d-sm-table-cell"><%= new Date(mantenimiento.fechaInicio).toLocaleDateString('es-ES') %></td>
                            <td class="d-none d-lg-table-cell"><%= new Date(mantenimiento.fechaTermino).toLocaleDateString('es-ES') %></td>
                            <td class="d-none d-md-table-cell"><%= mantenimiento.tecnico %></td>
                            <td class="d-none d-lg-table-cell"><%= new Date(mantenimiento.proximoMantenimiento).toLocaleDateString('es-ES') %></td>
                            <td>
                                <% 
                                const hoy = new Date();
                                const proximo = new Date(mantenimiento.proximoMantenimiento);
                                const diasRestantes = Math.ceil((proximo - hoy) / (1000 * 60 * 60 * 24));
                                %>
                                <% if (diasRestantes < 0) { %>
                                    <span class="badge bg-danger">Vencido</span>
                                <% } else if (diasRestantes <= 7) { %>
                                    <span class="badge bg-warning">Próximo</span>
                                <% } else { %>
                                    <span class="badge bg-success">Al día</span>
                                <% } %>
                            </td>
                            <td>
                                <div class="d-flex flex-column d-md-none gap-1">
                                    <a href="/mantenimientos/<%= mantenimiento._id %>" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <% if (user.rol === 'administrador' || (user.rol === 'moderador' && mantenimiento.creadoPor && mantenimiento.creadoPor._id.toString() === user._id.toString())) { %>
                                        <a href="/mantenimientos/<%= mantenimiento._id %>/editar" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    <% } %>
                                    <% if (user.rol === 'administrador') { %>
                                        <form method="POST" action="/mantenimientos/<%= mantenimiento._id %>?_method=DELETE" onsubmit="return confirm('¿Estás seguro de eliminar este mantenimiento?')">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                                <div class="d-none d-md-flex gap-1">
                                    <a href="/mantenimientos/<%= mantenimiento._id %>" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <% if (user.rol === 'administrador' || (user.rol === 'moderador' && mantenimiento.creadoPor && mantenimiento.creadoPor._id.toString() === user._id.toString())) { %>
                                        <a href="/mantenimientos/<%= mantenimiento._id %>/editar" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    <% } %>
                                    <% if (user.rol === 'administrador') { %>
                                        <form method="POST" action="/mantenimientos/<%= mantenimiento._id %>?_method=DELETE" class="d-inline" onsubmit="return confirm('¿Estás seguro de eliminar este mantenimiento?')">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>