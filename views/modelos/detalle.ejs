<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detalle Modelo - <%= modelo.nombre %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h3 class="mb-0"><%= modelo.nombre %></h3>
        <small class="text-muted">Código: <strong><%= modelo.codigo %></strong></small>
      </div>
      <div class="d-flex gap-2 align-items-center">
        <a href="/" class="btn btn-outline-secondary">Inicio</a>
        <% if (user && (user.rol === 'administrador' || user.rol === 'moderador')) { %>
          <a href="/mantenimientos/nuevo?modelo=<%= encodeURIComponent(modelo.nombre + ' (' + modelo.codigo + ')') %>&tipo=<%= modelo.tipo %>&codigo=<%= encodeURIComponent(modelo.codigo) %>" class="btn btn-sm btn-success me-2">Agregar mantenimiento</a>
        <% } %>
        <a href="/modelos" class="btn btn-sm btn-outline-secondary">Volver a Modelos</a>
      </div>
    </div>

    <% if (modelo.imagen) { %>
      <div class="mb-3"><img src="<%= modelo.imagen %>" style="max-width:320px; width:100%; height:auto; object-fit:cover;" /></div>
    <% } %>

    <h5>Historial de mantenimientos</h5>
    <% if (mantenimientos.length === 0) { %>
      <p>No hay mantenimientos registrados para este modelo aún.</p>
    <% } else { %>
      <ul class="list-group">
      <% mantenimientos.forEach(m => { %>
        <li class="list-group-item">
          <div class="d-flex justify-content-between">
            <div>
              <strong><%= m.tipoMantenimiento %></strong> - <%= m.modelo %> por <em><%= m.tecnico %></em>
              <div><small>Inicio: <%= new Date(m.fechaInicio).toLocaleString('es-ES') %> | Termino: <%= new Date(m.fechaTermino).toLocaleString('es-ES') %></small></div>
            </div>
            <div>
              <a href="/mantenimientos/<%= m._id %>" class="btn btn-sm btn-outline-primary">Ver</a>
            </div>
          </div>
        </li>
      <% }) %>
      </ul>
    <% } %>

  </div>
</body>
</html>