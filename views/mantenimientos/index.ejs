<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Mantenimiento</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/mantenimientos">
                <img src="/images/logo.png" alt="Logo" class="company-logo">
                <i class="fas fa-tools me-2"></i>Sistema de Mantenimiento
            </a>
            
            <% if (user) { %>
                <div class="navbar-nav ms-auto">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i><%= user.nombre %> 
                            <span class="badge bg-<%= user.rol === 'administrador' ? 'danger' : 'warning' %>"><%= user.rol %></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/auth/logout"><i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión</a></li>
                        </ul>
                    </div>
                </div>
            <% } %>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-list me-2"></i>Mantenimientos Registrados</h2>
    <% if (user.rol === 'administrador') { %>
        <a href="/mantenimientos/nuevo" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Nuevo Mantenimiento
        </a>
    <% } %>
</div>

<div class="row mb-3">
    <div class="col-md-4">
        <input type="text" id="searchInput" class="form-control" placeholder="Buscar por modelo, técnico...">
    </div>
    <div class="col-md-3">
        <select id="filterTipo" class="form-select">
            <option value="">Todos los tipos</option>
            <option value="Desktop">Desktop</option>
            <option value="Laptop">Laptop</option>
            <option value="Servidor">Servidor</option>
            <option value="All-in-One">All-in-One</option>
        </select>
    </div>
    <div class="col-md-3">
        <select id="filterMantenimiento" class="form-select">
            <option value="">Todos los mantenimientos</option>
            <option value="Preventivo">Preventivo</option>
            <option value="Correctivo">Correctivo</option>
            <option value="Predictivo">Predictivo</option>
        </select>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="mantenimientosTable">
                <thead class="table-dark">
                    <tr>
                        <th>Tipo</th>
                        <th>Modelo</th>
                        <th>Mantenimiento</th>
                        <th>Fecha</th>
                        <th>Técnico</th>
                        <th>Próximo</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% mantenimientos.forEach(mantenimiento => { %>
                        <tr>
                            <td>
                                <i class="fas fa-<%= mantenimiento.tipo === 'Desktop' ? 'desktop' : 
                                                    mantenimiento.tipo === 'Laptop' ? 'laptop' : 
                                                    mantenimiento.tipo === 'Servidor' ? 'server' : 'computer' %> me-2"></i>
                                <%= mantenimiento.tipo %>
                            </td>
                            <td><strong><%= mantenimiento.modelo %></strong></td>
                            <td>
                                <span class="badge bg-<%= mantenimiento.tipoMantenimiento === 'Preventivo' ? 'success' : 
                                                          mantenimiento.tipoMantenimiento === 'Correctivo' ? 'danger' : 'info' %>">
                                    <%= mantenimiento.tipoMantenimiento %>
                                </span>
                            </td>
                            <td><%= new Date(mantenimiento.fecha).toLocaleDateString('es-ES') %></td>
                            <td><%= mantenimiento.tecnico %></td>
                            <td><%= new Date(mantenimiento.proximoMantenimiento).toLocaleDateString('es-ES') %></td>
                            <td>
                                <% 
                                const hoy = new Date();
                                const proximo = new Date(mantenimiento.proximoMantenimiento);
                                const diasRestantes = Math.ceil((proximo - hoy) / (1000 * 60 * 60 * 24));
                                %>
                                <% if (diasRestantes < 0) { %>
                                    <span class="badge bg-danger">Vencido</span>
                                <% } else if (diasRestantes <= 7) { %>
                                    <span class="badge bg-warning">Próximo</span>
                                <% } else { %>
                                    <span class="badge bg-success">Al día</span>
                                <% } %>
                            </td>
                            <td>
                                <a href="/mantenimientos/<%= mantenimiento._id %>" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <% if (user.rol === 'administrador') { %>
                                    <a href="/mantenimientos/<%= mantenimiento._id %>/editar" class="btn btn-sm btn-outline-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>